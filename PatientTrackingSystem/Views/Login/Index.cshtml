@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_PatientLayout";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum Aç</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail Adresi</label>
                        <input type="email" name="MailAddress" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" name="Password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/Register/Index"> Hesabın yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
