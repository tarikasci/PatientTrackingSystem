@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PT SYSTEM | Login</title>

    <link href="~/ManagerTheme/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/ManagerTheme/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/ManagerTheme/css/animate.css" rel="stylesheet">
    <link href="~/ManagerTheme/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">IN+</h1>

        </div>
        <form method="post" class="m-t" role="form">
            <div class="form-group">
                <input type="email" name="MailAddress" class="form-control" placeholder="Mail Adresi" required="required">
            </div>
            <div class="form-group">
                <input type="password" name="Password" class="form-control" placeholder="Şifre" required="required">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Giriş Yap</button>
        </form>
    </div>
</div>

<!-- Mainly scripts -->
<script src="~/ManagerTheme/js/jquery-3.1.1.min.js"></script>
<script src="~/ManagerTheme/js/popper.min.js"></script>
<script src="~/ManagerTheme/js/bootstrap.js"></script>

</body>

</html>
