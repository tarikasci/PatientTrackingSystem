
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Doktor Dashboard</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/DoctorTheme/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/DoctorTheme/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/DoctorTheme/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/DoctorTheme/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="../../index.html"><img src="~/DoctorTheme/assets/images/logo.svg" alt="logo" /></a>
          <a class="navbar-brand brand-logo-mini" href="../../index.html"><img src="~/DoctorTheme/assets/images/logo-mini.svg" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
          <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
          </button>
          <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
          </button>
        </div>
      </nav>
      <!-- partial -->
       <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
         @await Component.InvokeAsync("DoctorSideBar")
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            @RenderBody()
          </div>
        </div>
      </div>
    </div>
    
    <script src="~/DoctorTheme/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/DoctorTheme/assets/js/off-canvas.js"></script>
    <script src="~/DoctorTheme/assets/js/hoverable-collapse.js"></script>
    <script src="~/DoctorTheme/assets/js/misc.js"></script>
  </body>
</html>